---
import { type Locale, t, getLocalePath, getOtherLocales, getLocaleLabel } from '../i18n/translations';

interface Props { locale: Locale; }
const { locale } = Astro.props;
const i = t(locale);
const otherLocales = getOtherLocales(locale);
---
<header class="header">
  <div class="container header-inner">
    <a href={getLocalePath(locale)} class="logo">
      <span class="logo-icon">ðŸ§Œ</span>
      <span class="logo-text">Mostro<span class="logo-accent">.community</span></span>
    </a>
    <nav class="nav">
      <a href="#communities">{i.nav.communities}</a>
      <a href="#how-it-works">{i.nav.howItWorks}</a>
      <a href="#start">{i.nav.getStarted}</a>
      <a href="#faq">{i.nav.faqNav}</a>
      <a href={getLocalePath(locale, '/guide')}>{i.nav.guideNav}</a>
      <a href={getLocalePath(locale, '/call-for-action')}>{i.nav.joinNav}</a>
      <a href="https://mostro.network" target="_blank" class="btn btn-outline btn-sm">{i.nav.protocol}</a>
      <div class="lang-dropdown">
        <button class="lang-switch" id="lang-toggle">{i.langSwitch} {getLocaleLabel(locale).split(' ')[0]}</button>
        <div class="lang-menu" id="lang-menu">
          {otherLocales.map(l => (
            <a href={getLocalePath(l)} class="lang-option">{getLocaleLabel(l)}</a>
          ))}
        </div>
      </div>
    </nav>
    <div class="mobile-actions">
      <div class="lang-dropdown">
        <button class="lang-switch" id="lang-toggle-mobile">{i.langSwitch} {getLocaleLabel(locale).split(' ')[0]}</button>
        <div class="lang-menu" id="lang-menu-mobile">
          {otherLocales.map(l => (
            <a href={getLocalePath(l)} class="lang-option">{getLocaleLabel(l)}</a>
          ))}
        </div>
      </div>
      <button class="mobile-menu" aria-label="Menu" id="mobile-menu-btn">
        <span></span><span></span><span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(29, 33, 44, 0.85);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--border);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .logo:hover { color: var(--text-primary); }
  .logo-icon { font-size: 1.6rem; }
  .logo-accent { color: var(--accent); }

  .nav {
    display: flex;
    align-items: center;
    gap: 28px;
  }

  .nav a {
    color: var(--text-secondary);
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav a:hover { color: var(--text-primary); }

  .btn-sm { padding: 8px 18px; font-size: 0.85rem; }

  .lang-dropdown {
    position: relative;
  }

  .lang-switch {
    padding: 6px 14px;
    border-radius: 8px;
    background: rgba(140, 198, 63, 0.08);
    border: 1px solid var(--border);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    transition: all 0.2s;
    cursor: pointer;
  }

  .lang-switch:hover {
    background: rgba(140, 198, 63, 0.15);
    border-color: var(--border-hover);
  }

  .lang-menu {
    display: none;
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 8px;
    background: rgba(29, 33, 44, 0.95);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 4px;
    min-width: 100px;
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    z-index: 200;
  }

  .lang-menu.open {
    display: flex;
    flex-direction: column;
  }

  .lang-option {
    padding: 8px 14px;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary) !important;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .lang-option:hover {
    background: rgba(140, 198, 63, 0.1);
    color: var(--text-primary) !important;
  }

  .mobile-actions {
    display: none;
    align-items: center;
    gap: 12px;
  }

  .mobile-menu {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .mobile-menu span {
    width: 24px;
    height: 2px;
    background: var(--text-primary);
    border-radius: 2px;
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .nav { display: none; }
    .nav .lang-dropdown { display: none; }
    .mobile-actions { display: flex; }
  }
</style>

<script>
  function setupLangDropdown(toggleId: string, menuId: string) {
    const toggle = document.getElementById(toggleId);
    const menu = document.getElementById(menuId);
    if (!toggle || !menu) return;

    toggle.addEventListener('click', (e) => {
      e.stopPropagation();
      menu.classList.toggle('open');
    });
  }

  setupLangDropdown('lang-toggle', 'lang-menu');
  setupLangDropdown('lang-toggle-mobile', 'lang-menu-mobile');

  document.addEventListener('click', () => {
    document.querySelectorAll('.lang-menu').forEach(m => m.classList.remove('open'));
  });

  document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
    const nav = document.querySelector('.nav') as HTMLElement;
    if (nav) {
      nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
      nav.style.flexDirection = 'column';
      nav.style.position = 'absolute';
      nav.style.top = '72px';
      nav.style.left = '0';
      nav.style.right = '0';
      nav.style.background = 'rgba(29, 33, 44, 0.95)';
      nav.style.padding = '24px';
      nav.style.borderBottom = '1px solid var(--border)';
    }
  });
</script>
