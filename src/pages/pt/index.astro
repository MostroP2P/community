---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Communities from '../../components/Communities.astro';
import HowItWorks from '../../components/HowItWorks.astro';
import GetStarted from '../../components/GetStarted.astro';
import FAQ from '../../components/FAQ.astro';
import Footer from '../../components/Footer.astro';

const locale = 'pt' as const;
---

<Layout
  title="Comunidade Mostro — Trading P2P de Bitcoin com Lightning + Nostr"
  description="Encontre e junte-se a comunidades Bitcoin que usam Mostro — o exchange P2P não-custodial sobre Lightning + Nostr"
  locale={locale}
>
  <Header locale={locale} />
  <main>
    <Hero locale={locale} />
    <Communities locale={locale} />
    <HowItWorks locale={locale} />
    <FAQ locale={locale} />
    <GetStarted locale={locale} />
  </main>
  <Footer locale={locale} />
</Layout>
